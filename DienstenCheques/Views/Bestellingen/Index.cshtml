@model DienstenCheques.Models.ViewModels.BestellingenViewModels.IndexViewModel

@{
    ViewData["Title"] = "Opvolging van bestellingen";
}

<h2>@ViewData["Title"] </h2>
<p> </p>
<div class="container">
    <form method="get">
        <div asp-validation-summary="All"></div>
        <div class="form-group row">
            <label asp-for="AantalBeschikbareCheques" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <p class="form-control-static">@Model.AantalBeschikbareCheques</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AantalOpenstaandePrestatieUren" class="col-md-3 col-form-label"></label>
            <div class="col-md-9">
                <p class="form-control-static">@Model.AantalOpenstaandePrestatieUren u</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="AantalMaanden" class="control-label col-md-3"></label>
            <div class="col-md-9">
                <select asp-for="AantalMaanden" asp-items="@Model.AantalMaandenKeuzeList" class="form-control"></select>
                <p></p>
                <input type="submit" value="Tonen" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>
<p></p>
<p>
    <a asp-action="Nieuw" class="btn btn-primary">Plaats een nieuwe bestelling</a>
</p>
@Html.Partial("_Bestellingen", Model)